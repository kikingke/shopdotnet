@model shopdotnet.Data.Entities.State

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Municipios de @Model.State_Name</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="TablaDepartamentos">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Cities.FirstOrDefault().City_Name)
                            </th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Cities)
                        {

                            <tr>

                                <td style="vertical-align: middle;">
                                    <!--<a asp-action="Details" asp-route-id="@item.City_ID" class="rowclick"></a>-->
                                    @Html.DisplayFor(modelItem => item.City_Name)
                                </td>
                                <td class="text-end">
                                    <a asp-action="EditCity" asp-route-id="@item.City_ID" class="btn btn-warning"><i class="fa-regular fa-pen-to-square"></i> Editar</a>
                                    <a asp-action="DeleteCity" asp-route-id="@item.City_ID" class="btn btn-danger"><i class="fa-solid fa-delete-left"></i> Borrar</a>
                                </td>

                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

